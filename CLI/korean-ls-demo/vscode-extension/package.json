{
  "name": "korean-language-server",
  "displayName": "Korean Language Server",
  "description": "Language Server for Korean programming language",
  "version": "0.1.0",
  "publisher": "korean-lang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:korean"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "korean",
        "aliases": [
          "Korean",
          "korean"
        ],
        "extensions": [
          ".kr"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Korean Language Server",
      "properties": {
        "koreanLanguageServer.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Korean Language Server executable. If empty, will try to find it in PATH."
        },
        "koreanLanguageServer.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warning",
            "error"
          ],
          "default": "info",
          "description": "Log level for the language server"
        },
        "koreanLanguageServer.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.3.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.19.0"
  }
}
